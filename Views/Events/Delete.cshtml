@model ZenithWebSite.Models.Zenith.Event

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Event</h2>

<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="EventId" />
        <dt>
            @Html.DisplayNameFor(model => model.Activity.ActivityDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Activity.ActivityDescription)
        </dd>

        <dt>Event Date</dt>
        <dd>
            @Html.DisplayFor(model => model.EventFromDatetime.Day)/@Html.DisplayFor(model => model.EventFromDatetime.Month)/@Html.DisplayFor(model => model.EventFromDatetime.Year)
        </dd>
        <dt>Event Time</dt>
        <dd>
            From @Html.DisplayFor(model => model.EventFromDatetime.Hour):@Html.DisplayFor(model => model.EventFromDatetime.Minute) to @Html.DisplayFor(model => model.EventToDatetime.Hour):@Html.DisplayFor(model => model.EventToDatetime.Minute)
        </dd>       
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
