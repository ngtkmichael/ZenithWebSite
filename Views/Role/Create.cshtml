@model Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole
@{
    ViewBag.Title = "Create Role";
}

<h2>Create Role</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="col-md-2 control-label">Enter Role Name:</label>
            <div class="col-md-10">
                <input asp-for="NormalizedName" class="form-control" />
                <span asp-validation-for="NormalizedName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
