@model ZenithWebSite.Models.Zenith.Activity

@{
    ViewData["Title"] = "Edit Activity";
}

<h2>Edit Activity</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ActivityId" />
        <div class="form-group">
            <label asp-for="ActivityCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActivityCode" class="form-control" />
                <span asp-validation-for="ActivityCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ActivityDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ActivityDescription" class="form-control" />
                <span asp-validation-for="ActivityDescription" class="text-danger"></span>
            </div>
        </div>
        <div style="display: none;">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationDate" class="form-control " />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

