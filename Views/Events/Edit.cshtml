@model ZenithWebSite.Models.Zenith.Event

@{
    ViewData["Title"] = "Edit Event";
}

<<h2>Edit Event</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EventId" />
        <div class="form-group">
            <label asp-for="ActivityId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
                <span asp-validation-for="ActivityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EventFromDatetime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EventFromDatetime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EventFromDatetime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EventToDatetime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EventToDatetime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EventToDatetime" class="text-danger"></span>
            </div>
        </div>
        <div  style="display: none;">
            <label asp-for="CreationUsername" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationUsername" class="form-control" />
                <span asp-validation-for="CreationUsername" class="text-danger"></span>
            </div>
        </div>
        <div  style="display: none;">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
