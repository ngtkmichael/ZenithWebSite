@model ZenithWebSite.Models.Zenith.Event

@{
    ViewData["Title"] = "Create A New Event";
}



<h2>Create A New Event</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="ActivityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ActivityId" class="form-control" asp-items="ViewBag.ActivityId"></select>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EventFromDatetime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EventFromDatetime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EventFromDatetime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EventToDatetime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EventToDatetime" class="form-control" type="datetime-local" />
                <span asp-validation-for="EventToDatetime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
